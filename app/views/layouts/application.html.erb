<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
    <%= render 'layouts/head_custom' %>
  </head>

  <body>
    <% if logged_in? %>
    <!-- ログインしていたときの画面 --> 
     
      <%= yield %>
      
    <% else %>
    <!-- ログインしていないときの画面 --> 
     
      <%= render 'layouts/header' %>
      <div class="container">
        <%= yield %>
      </div>
      
    <% end %>
  </body>
</html>