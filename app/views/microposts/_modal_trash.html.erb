<!-- モーダルウィンドウ -->
<div class="modal" id="modal<%= item.id %>" style="width: 100%; height: 100vh; top: 0; left: 0; dispaly:none; z-index: 5; position: fixed;">

  <!-- モーダルウィンドウが開いている時のオーバーレイ -->
  <div class="overLay modalClose" style="top: 0; left: 0; background: rgba(200,200,200,0.9); width: 100%; height: 100vh; position: relative: z-index: 6;"></div>

  <!-- モーダルウィンドウの中身 -->
  <div class="inner" style="position: absolute; z-index: 11; top: 50%; left: 50%; transform: translate(-50%,-50%); background: #fff; padding: 25px; border-radius: 10px; width: 80%;">
    <p class="border-bottom pb-2 lead">
      メモ「<%= item.title %>」をゴミ箱に移動させますか？
    </p>
    <button type="button" class="modalClose btn btn-outline-secondary mt-2 float-left">キャンセル</button>
    <%= link_to "移動させる", to_trash_micropost_path(item), class: "btn btn-primary mt-2 float-right", method: "patch", remote: true %>
  </div>

</div>
