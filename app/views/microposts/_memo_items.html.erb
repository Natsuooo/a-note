<% @memo_items.each do |item| %>
<a href="<%= ajax_form_path(item) %>" class="list-group-item list-group-item-action flex-column align-items-start" data-remote="true">

  <div class="row mb-2">
    <div class="col index-title"><%= item.title %></div>
    <div class="text-right index-date"><small class="text-muted"><%= item.created_at.strftime('%Y/%m/%d') %></small></div>
  </div>
  <p class="mb-1 text-muted index-body"><%= truncate(item.body, length: 100) %></p>
</a>
<% end %>