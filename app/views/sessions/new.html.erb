<% provide(:title, 'ログイン') %>

<%= render 'shared/flash_messages' %>

<h2 class="text-center mt-3 mb-3">ログイン</h2>
<div class="row justify-content-center">
  <div class="col-sm-6 ml-4 mr-4">
    <%= form_for(:session, url: login_path) do |f| %>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    
    <div class="custom-control custom-checkbox">
      <%= f.check_box :remember_me, class: "custom-control-input", checked: "checked" %>
      <%= f.label :remember_me, class: "custom-control-label" do %>
      <span>パスワードを保存する</span>
      <% end %>
    </div>
    
    <%= f.submit "ログイン", class: "btn btn-primary btn-block mt-4" %>
    <% end %>
    
    <p class="text-center mt-4"><%= link_to "新規登録", signup_path %></p>
    
    <p class="text-center mt-3"><%= link_to "パスワードを忘れた", "#" %></p>
  </div>
</div>
