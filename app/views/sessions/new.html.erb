<% provide(:title, 'ログイン') %>

<header class="navbar navbar-light bg-white shadow-sm">
  <a class="navbar-brand" href="/" style="font-family: 'Comfortaa', cursive;">
    <%= image_tag "apple-touch-icon.png", style: "width: 25px; height: 25px;", class: "mb-1" %>
    A-note
  </a>
  <%= link_to "新規登録", signup_path, class: "btn btn-outline-primary btn-sm" %>
</header>

<%= render 'shared/flash_messages' %>

<div class="row justify-content-center">
  <div class="col-sm-6 ml-4 mr-4 mt-3 bg-light rounded">
    <h3 class="text-center mt-5 mb-5 border-bottom pb-3">ログイン</h3>
    <span class="border-bottom"></span>
    <%= form_for(:session, url: login_path) do |f| %>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="custom-control custom-checkbox">
      <%= f.check_box :remember_me, class: "custom-control-input" %>
      <%= f.label :remember_me, class: "custom-control-label" do %>
      <span>パスワードを保存する</span>
      <% end %>
    </div>

    <%= f.submit "ログイン", class: "btn btn-primary btn-block mt-4" %>
    <% end %>

    <p class="text-center mt-5 text-muted">
      <small>
        アカウントをお持ちではありませんか？
        <%= link_to "新規登録", signup_path %>
      </small>
    </p>

    <p class="text-center mt-3">
      <small>
        <%= link_to "パスワードをお忘れの方", new_password_reset_path %>
      </small>
    </p>

  </div>
</div>
