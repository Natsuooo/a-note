<% provide(:title, 'パスワード再設定') %>

<%= render 'shared/flash_messages' %>

<h3 class="text-center mb-4">パスワードを再設定する</h3>
<div class="row justify-content-center">
  <div class="col-sm-6 ml-4 mr-4">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
    
    <%= hidden_field_tag :email, @user.email %>

    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :password_confirmation, "確認用パスワード" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <%= f.submit "パスワードを再設定する", class: "btn btn-primary btn-block mt-4" %>
    <% end %>

    <p class="text-center mt-4"><%= link_to "ログイン", login_path %></p>

    <p class="text-center mt-3"><%= link_to "新規登録", signup_path %></p>
  </div>
</div>

